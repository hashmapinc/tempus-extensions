{
  "schema": {
    "title": "Rig State Spark Job Configuration",
    "type": "object",
    "properties": {
      "host": {
        "title": "Computation Host",
        "type": "string"
      },
      "port": {
        "title": "Computation Port",
        "type": "integer",
        "default": 8998,
        "minimum": 0,
        "maximum": 65536
      },
      "source": {
        "title": "Select Source",
        "type": "string"
      },
      "kafkaUrl": {
        "title": "Kafka Broker(s)",
        "type": "string"
      },
      "kafkaTopic": {
        "title": "Topic Name",
        "type": "string"
      },
      "kinesisStreamName": {
        "title": "Kinesis Stream Name",
        "type": "string"
      },
      "kinesisRegion": {
        "title": "Kinesis Region",
        "type": "string"
      },
      "actionPath": {
        "title": "Livy Action",
        "type": "string"
      },
      "mqttUrl": {
        "title": "MQTT Endpoint",
        "type": "string"
      },
      "gatewayAccessToken": {
        "title": "Gateway Access Token",
        "type": "string"
      },
      "headers": {
        "title": "Request Headers",
        "type": "array",
        "items": {
          "title": "Request Header",
          "type": "object",
          "properties": {
            "key": {
              "title": "Key",
              "type": "string"
            },
            "value": {
              "title": "Value",
              "type": "string"
            }
          }
        }
      }
    },
    "required": [
      "source",
      "actionPath",
      "mqttUrl",
      "gatewayAccessToken",
      "host",
      "port"
    ]
  },
  "form": [
    "host",
    "port",
    {
      "key": "source",
      "type": "rc-select",
      "multiple": false,
      "items": [
        {
          "value": "kafka",
          "label": "Kafka"
        },
        {
          "value": "kinesis",
          "label": "Kinesis"
        }
      ]
    },
    {
      "key": "kafkaUrl",
      "condition": "model.source === 'kafka'"
    },
    {
      "key": "kafkaTopic",
      "condition": "model.source === 'kafka'"
    },
    {
      "key": "kinesisRegion",
      "condition": "model.source === 'kinesis'"
    },
    {
      "key": "kinesisStreamName",
      "condition": "model.source === 'kinesis'"
    },
    "actionPath",
    "mqttUrl",
    "gatewayAccessToken",
    "headers"
  ]
}